
<h1><%= @product.name %></h1>


<p>Description: <%= @product.description %></p>
<p>Price: <%= @product.price_in_dollars %></p>

<%= link_to 'Edit', edit_product_path %> |
<%= link_to 'Delete', product_path, method: :delete, data: {confirm: "Are you sure you want to delete this product?"} %>
<hr>
<h2>Reviews</h2>

<ul>
  <% @product.reviews.each do |review| -%>
    <li>
      <%= review.user.email %> said:
      <%= review.comment %>
      <%= link_to 'Edit', edit_product_review_path(@product, review) %>
      <%= link_to 'Delete', product_review_path(@product, review), method: :delete, data: {confirm: "Are you sure you want to delete this review?"} %>
    </li>
  <% end %>
</ul>

<h2>Add Comment</h2>

<%= render './reviews/form', product: @product, review: @review %>
